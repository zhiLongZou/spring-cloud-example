<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://code.alibabatech.com/schema/dubbo
		http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <bean id="demoCallback" class="com.hikvision.callback.NotifyImpl"/>

    <dubbo:reference id="personService" interface="com.hikvision.person.PersonService"
                     check="false"
                     version="1.0.0" group="person"
                     stub="com.hikvision.stub.PersonServiceStub"
                     mock="com.hikvision.mock.PersonServiceMock"
                     sticky="true" connections="10" actives="10"
                     >
        <dubbo:method name="get" async="true" onreturn="demoCallback.onreturn" onthrow="demoCallback.onthrow"/>
    </dubbo:reference>
</beans>